<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_left_top_header"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="396"
                android:textColor="@color/coment_black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="总场数"
                android:textColor="@color/coment_black_99"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mid_top_header"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="396"
                android:textColor="@color/coment_black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="命中率"
                android:textColor="@color/coment_black_99"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_right_top_header"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="396"
                android:textColor="@color/coment_black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="回报率"
                android:textColor="@color/coment_black_99"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
 <View android:layout_width="match_parent"
     android:background="@color/coment_gray_bg"
     android:layout_height="5dp"/>
        <LinearLayout
            android:id="@+id/ll_report_header"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/fangandan_3_left"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_left_header"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/coment_black"
                android:text="日战绩"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_mid_header"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/coment_black"
                android:text="周战绩"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_right_header"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/coment_black"
                android:text="月战绩"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/coment_gray_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="5dp"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/coment_black_99"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="5dp"
            android:gravity="center"
            android:text="场数"
            android:textColor="@color/coment_black_99"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:gravity="center"
            android:text="命中率"
            android:textColor="@color/coment_black_99"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:gravity="center"
            android:text="回报率"
            android:textColor="@color/coment_black_99"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>