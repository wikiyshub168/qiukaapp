<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/shape_gray_storke"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_host_vote_count"
            android:gravity="left"
            android:text="54%"
            android:textColor="@color/red_"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_width="65dp"
            android:layout_height="wrap_content" />

        <View android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_host_name"
            android:text="中国"
            android:textColor="@color/black_28"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="vs"
            android:textColor="@color/coment_black_99"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_away_name"
            android:text="日本"
            android:textColor="@color/black_28"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_away_vote_count"
            android:gravity="right"
            android:text="46%"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_width="65dp"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <SeekBar
        android:layout_marginBottom="5dp"
        android:max="100"
        android:id="@+id/sb_vote_topic"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:progress="50"
        android:thumb="@drawable/thumb_vote"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="11dp"

        android:progressDrawable="@drawable/topic_vote_seek_bar"

        />

    <TextView

        android:id="@+id/tv_curdown_time"
        android:text="结束时间"
        android:textColor="@color/black_46"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>