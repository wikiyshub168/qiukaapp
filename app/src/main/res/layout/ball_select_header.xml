<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:background="@color/white"
        android:padding="10dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="7.5dp"
            android:background="@drawable/black_line"
            android:layout_width="3dp"
            android:layout_height="14dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="推荐"
            android:textColor="@color/black_28"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_more_count_home"
                android:text="全部"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:textColor="@color/coment_black_99"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="3.1dp"
                android:layout_toRightOf="@id/tv_more_count_home"
                android:src="@drawable/arrow_right"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:background="@color/base_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_value_header"
                android:text="123.8%"
                android:paddingRight="29dp"
                android:paddingLeft="29dp"
                android:textSize="21sp"
                android:textColor="@color/red_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_text_header"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近3日回报"
                android:textColor="@color/coment_black_99"
                android:textSize="12sp"
                />
        </LinearLayout>



        <View
            android:layout_marginBottom="12.5dp"
            android:layout_marginTop="12.5dp"
            android:background="@color/coment_gray_bg"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21.5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红人稳定盈利套餐"
                android:textColor="@color/black_28"
                android:textSize="16sp"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_count_header"
                    android:background="@drawable/shape_ball_blue_stroke"
                    android:paddingLeft="7.5dp"
                    android:paddingRight="7.5dp"
                    android:paddingTop="3.5dp"
                    android:paddingBottom="3.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周均38场"
                    android:textColor="#ff62afef"
                    android:textSize="11sp"
                    />

                <TextView
                    android:id="@+id/tv_price_header"
                    android:background="@drawable/shape_ball_red_stroke"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="7.5dp"
                    android:paddingRight="7.5dp"
                    android:paddingTop="3.5dp"
                    android:paddingBottom="3.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28金币/7天"
                    android:textColor="#fff6695e"
                    android:textSize="11sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/coment_gray_bg"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout

        android:background="@color/white"
        android:padding="10dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="7.5dp"
            android:background="@drawable/black_line"
            android:layout_width="3dp"
            android:layout_height="14dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="大数据选球"
            android:textColor="@color/black_28"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>