<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_date_title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coment_gray_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="2017-12-10 周日"
        android:textColor="@color/coment_black_99"
        android:textSize="12sp" />

<RelativeLayout
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:gravity="center"
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" >
       <ImageView
           android:padding="3dp"
           android:layout_centerVertical="true"
           android:layout_gravity="center_vertical"
           android:id="@+id/iv_star"
           android:src="@drawable/star_gray"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_centerHorizontal="true"
           android:visibility="invisible"
           android:layout_marginTop="10dp"
           android:layout_below="@id/iv_star"
           android:id="@+id/tv_left"
           android:textSize="10sp"
           android:text="120"
           android:textColor="@color/score_gray_top_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>


    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ll_center"
        android:gravity="center|right"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_left_top"
            android:layout_width="wrap_content"
            android:textColor="#666666"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="国际友谊 19:00"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_gravity="right"
           android:gravity="center_vertical"
            android:id="@+id/ll_left_bottom"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginTop="0.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@drawable/yellow_card_shape"
                android:id="@+id/tv_yellow_card_layout"
                android:textColor="#7F5709"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_red_card_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/red_card_shape"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
            <TextView
                android:layout_gravity="center_vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:id="@+id/tv_rank_layout"
                android:textColor="@color/coment_black_99"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_team_name_layout"
                android:paddingTop="2dp"
                android:textColor="@color/coment_black"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:text="[148] 中华台北"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:id="@+id/tv_left_bottom"
            android:text="[148] 中华台北"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_center_top"
            android:textColor="@color/red_"
            android:textSize="12sp"
            android:text="完"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_time_pos"
                android:layout_marginLeft="1dp"
                android:layout_alignTop="@id/tv_center_top"
                android:layout_toRightOf="@id/tv_center_top"
                android:text="’"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="#3EA53B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:id="@+id/tv_center_bottom"
            android:textColor="@color/red_"
            android:text="1 : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ll_center"
        android:gravity="center|left"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:id="@+id/ll_right_top"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:text=" "
                android:id="@+id/tv_right_top"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_right_bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">







                <TextView
                    android:textStyle="bold"
                    android:maxLength="5"
                    android:id="@+id/tv_team_name_away"
                    android:paddingTop="2dp"
                    android:textColor="@color/coment_black"
                    android:paddingRight="0dp"
                    android:paddingLeft="0dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:text="[148] 中华台北"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:id="@+id/tv_rank_away"
                    android:textColor="@color/coment_black_99"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="5"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:background="@drawable/red_card_shape"
                    android:id="@+id/tv_red_card_away"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="1"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:background="@drawable/yellow_card_shape"
                    android:id="@+id/tv_yellow_card_away"
                    android:textColor="#7F5709"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/tv_right_bottom"
                android:text="美国[162]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>



    </LinearLayout>
  <LinearLayout
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <ImageView

        android:id="@+id/iv_rigth"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <TextView
          android:visibility="gone"
          android:textColor="#464646"
          android:textSize="9sp"
          android:paddingLeft="2dp"
          android:paddingRight="2dp"
          android:text="直播"
          android:layout_marginTop="5dp"
          android:id="@+id/iv_rigth1"
          android:layout_gravity="center_vertical"
          android:background="@drawable/live_shape"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:visibility="gone"
          android:textColor="@color/white"
          android:textSize="9sp"
          android:paddingLeft="2dp"
          android:paddingRight="2dp"
          android:text="情报"
          android:layout_marginTop="5dp"
          android:id="@+id/iv_rigth2"
          android:layout_gravity="center_vertical"
          android:background="@drawable/qi_shape"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
  </LinearLayout>
</RelativeLayout>
</LinearLayout>