<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:id="@+id/tv_title"
       android:textSize="13sp"
       android:textColor="@color/black_46"
       android:gravity="center"
       android:text="近期1场交锋"
       android:padding="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_host_name"
                android:textSize="12sp"
                android:gravity="center"
                android:text="主队"
                android:textColor="@color/black_46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_host_win_count"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                android:gravity="center"
                android:text="1胜"
                android:textColor="@color/coment_black_99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_draw_count"
            android:textSize="11sp"
            android:gravity="center"
            android:text="1场"
            android:textColor="@color/coment_black_99"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/tv_away_win_count"
                android:textSize="11sp"
                android:gravity="center"
                android:text="0胜"
                android:textColor="@color/coment_black_99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_away_name"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="客队"
                android:textColor="@color/black_46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <SeekBar

            android:layout_marginBottom="5dp"
            android:max="100"
            android:id="@+id/sb_vs_ping_item"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:progress="80"

            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:thumb="@null"
            android:secondaryProgress="40"

            android:progressDrawable="@drawable/sb_vs"

            />

    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/coment_gray_bg"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="赛事"
            android:textColor="@color/black_28"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="日期"
            android:textColor="@color/black_28"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="比分"
            android:textColor="@color/black_28"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_child_item_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>


</LinearLayout>