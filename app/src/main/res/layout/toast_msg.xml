<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black_50_alpha"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="100dp"
        android:id="@+id/top"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_shape_stroke">

        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/tv_content_toast_msg"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="提示信息"
            android:layout_gravity="center"
            android:textColor="@color/coment_black"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/base_line_color"/>

            <TextView
                android:background="@drawable/toast_msg_yellow"
                android:id="@+id/tv_ok_toast_msg"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="确定"
                android:textSize="12sp"
                android:textColor="@color/coment_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>