<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <include layout="@layout/home_fg_title_new_layout"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.andview.refreshview.XRefreshView
        android:background="@color/coment_gray_bg"
        android:id="@+id/xfv_home_fg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ListView
          android:dividerHeight="5dp"
          android:divider="@color/coment_gray_bg"
          android:scrollbars="none"
          android:id="@+id/lv_home_fg"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
    </com.andview.refreshview.XRefreshView>
        <include layout="@layout/loadinglayout"/>
    </FrameLayout>
</LinearLayout>