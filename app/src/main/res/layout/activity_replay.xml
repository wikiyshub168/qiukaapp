<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReplayActivity">
   <EditText
       android:maxLength="80"
       android:paddingTop="5dp"
       android:paddingBottom="5dp"
       android:paddingLeft="20dp"
       android:paddingRight="20dp"
       android:gravity="start"
       android:hint="我们会认真思考您的建议"
       android:textColor="@color/black_46"
       android:textSize="12sp"
       android:id="@+id/et_content_replay"
       android:layout_margin="1dp"
       android:background="@drawable/shape_gray_storke"
       android:layout_width="match_parent"
       android:layout_height="130dp" />
    <TextView
        android:id="@+id/tv_submit_replay"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_marginTop="25sp"
        android:gravity="center"
        android:text="提交反馈"
        android:background="@drawable/select_score_bottom"
        android:textColor="@color/coment_black"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
