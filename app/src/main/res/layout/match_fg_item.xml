<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/v_split_line"
        android:layout_width="match_parent"
        android:background="@color/base_line_color"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


        </RelativeLayout>


        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_center"
            android:gravity="center|right"
            android:orientation="vertical"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:id="@+id/ll_left_bottom"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:id="@+id/tv_rank_layout"
                    android:textColor="@color/coment_black_99"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center"
                    android:id="@+id/tv_left_bottom"
                    android:text="[148] 中华台北"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">






        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ll_center"
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:id="@+id/ll_right_top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=" "
                    android:id="@+id/tv_right_top"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_right_bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">





                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:id="@+id/tv_rank_away"
                    android:textColor="@color/coment_black_99"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:id="@+id/tv_right_bottom"
                    android:text="美国[162]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/iv_rigth"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_date_title_item"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/coment_gray_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="2017-12-10 周日"
        android:textColor="@color/coment_black_99"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/ll_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_host_icon_match_detail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/host_icon" />

            <TextView
                android:id="@+id/tv_team_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:padding="3dp"
                android:lines="1"
                android:text="主队"
                android:textColor="@color/black_46"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_left_top"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black_28"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="国际友谊 19:00"
                    android:textSize="12sp" />



                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_center_top"
                        android:textColor="@color/red_"
                        android:textSize="12sp"
                        android:text="完"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_time_pos"
                        android:layout_marginLeft="1dp"
                        android:layout_alignTop="@id/tv_center_top"
                        android:layout_toRightOf="@id/tv_center_top"
                        android:text="’"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="#3EA53B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>



                <TextView
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="gone"
                    android:textColor="#464646"
                    android:textSize="9sp"
                    android:layout_marginLeft="3dp"
                    android:text="直播"
                    android:id="@+id/iv_rigth1"
                    android:layout_gravity="center"
                    android:background="@drawable/live_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView

                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:layout_marginLeft="3dp"
                    android:text="情报"
                    android:id="@+id/iv_rigth2"
                    android:layout_gravity="center"
                    android:background="@drawable/qi_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <LinearLayout
                    android:gravity="bottom|center"
                    android:layout_marginRight="5dp"
                    android:id="@+id/ll_score_match_fg"
                    android:orientation="horizontal"
                  android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginBottom="5dp"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="0.5dp"
                        android:layout_marginRight="5dp"
                        android:text="1"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/yellow_card_shape"
                        android:id="@+id/tv_yellow_card_layout"
                        android:textColor="#7F5709"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/tv_red_card_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@drawable/red_card_shape"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                         />

                        </LinearLayout>
                    <TextView
                        android:textSize="30sp"
                        android:id="@+id/tv_center_bottom"
                        android:textColor="@color/red_"
                        android:text="1 : 0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                   <LinearLayout
                       android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="5"
                        android:layout_marginTop="0.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/red_card_shape"
                        android:id="@+id/tv_red_card_away"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="0.5dp"
                        android:layout_marginLeft="5dp"
                        android:text="1"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/yellow_card_shape"
                        android:id="@+id/tv_yellow_card_away"
                        android:textColor="#7F5709"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                   </LinearLayout>

                </LinearLayout>


                <ImageView

                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_star"
                    android:src="@drawable/star_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:id="@+id/tv_live_url_bottom"
                android:layout_width="wrap_content"
                android:textColor="@color/coment_black_99"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="国际友谊 19:00"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_away_icon_match_detail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/away_icon" />

            <TextView
                android:id="@+id/tv_team_name_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:padding="3dp"
                android:lines="1"
                android:text="客队"
                android:textColor="@color/black_46"
                android:textSize="12sp" />
        </LinearLayout>




       </LinearLayout>



        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:layout_margin="10dp"
            android:id="@+id/tv_left"
            android:textSize="10sp"
            android:text="120"
            android:textColor="@color/coment_black_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="3dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/shape_ball_blue_stroke_small"
            android:layout_margin="10dp"
            android:id="@+id/tv_layerlist"
            android:textSize="10sp"
            android:text="阵容"
            android:textColor="#62AFEF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <View
        android:visibility="gone"
        android:id="@+id/v_split_line_bottom"
        android:layout_width="match_parent"
        android:background="@color/base_line_color"
        android:layout_height="0.5dp"/>
</LinearLayout>