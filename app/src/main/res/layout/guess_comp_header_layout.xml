<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/guess_compe_top"
        android:id="@+id/iv_header"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@color/white"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <FrameLayout
           android:id="@+id/fl_0_header"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="wrap_content">
           <TextView
               android:text="红人榜"
               android:textSize="14sp"
               android:textColor="@color/black_28"
               android:padding="5dp"
               android:drawablePadding="5dp"
               android:drawableLeft="@drawable/guess_0"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </FrameLayout>
        <View android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/coment_gray_bg"/>
        <FrameLayout
            android:id="@+id/fl_1_header"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="我的推荐"
                android:textSize="14sp"
                android:textColor="@color/black_28"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/guess_1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_lingjiang_guess_comp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/coment_gray_bg"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/black_line"
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="待领奖"
            android:textColor="@color/black_28"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_lingjaing_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


          </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/coment_gray_bg"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/black_line"
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="每周一发奖"
            android:textColor="@color/black_28"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

           android:drawablePadding="10dp"

            android:drawableRight="@drawable/down"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_date_header"
            android:gravity="right"
            android:text="即时榜单(01.02-01.15)"
            android:textColor="@color/black_28"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="排名"
                android:textSize="12sp"
                android:textColor="@color/coment_black_99"
                android:drawablePadding="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="回报率"
                android:textSize="12sp"
                android:textColor="@color/coment_black_99"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="预计奖金"
                android:textSize="12sp"
                android:textColor="@color/coment_black_99"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/base_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/v_mine_item"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="#55FDDB45"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_count_guess_item"
                android:layout_gravity="center_vertical"
                android:text="1↑"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="@color/black_28"
                android:drawablePadding="5dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" >
                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="25dp">


                    <ImageView
                        android:id="@+id/iv_head_dynamic_item"
                        android:src="@drawable/audio"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <ImageView
                        android:id="@+id/iv_vip_header"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/vip_coin"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/iv_red_point_header"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/cricle_shape_red"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name_guess_item"
                        android:layout_marginLeft="5dp"
                        android:text="球咖宝贝"
                        android:textSize="12sp"
                        android:textColor="@color/coment_black"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_tag_guess_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_alignTop="@+id/iv_vip_header"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="五中五"
                        android:textColor="@color/coment_black_99"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_per_guess_item"
                android:text="108.6%"
                android:textSize="14sp"
                android:textColor="@color/coment_black"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_price_guess_item"
                android:text="￥150"
                android:textSize="16sp"
                android:textColor="@color/red_"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>