<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#272B2E"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_back_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_left"
        android:padding="10dp"
        />



    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    <EditText
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:id="@+id/et_search_title"
        android:hint="阿森纳"
        android:maxLength="40"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:drawableLeft="@drawable/search_home"
        android:background="@drawable/white_shape_stroke_solid_white_"
        android:textSize="15sp"
        android:textColor="@color/coment_black"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/tv_clear_et_content"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/delete_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <FrameLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="2dp"
            android:clickable="true"
            android:id="@+id/tv_search_title"
            android:layout_gravity="center"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>