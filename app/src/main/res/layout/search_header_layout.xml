<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_personal_titel_header"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="相关咖友"
        android:textSize="13sp"
        android:textColor="@color/coment_black_99"
        android:background="@color/coment_gray_bg"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/rv_personal_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_topic_title_header"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="相关话题"
        android:textSize="13sp"
        android:textColor="@color/coment_black_99"
        android:background="@color/coment_gray_bg"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"/>
    <com.mayisports.qca.view.NestingListViewInScrollView

        android:dividerHeight="0.5dp"
        android:divider="@color/base_line_color"
        android:background="@color/white"
        android:id="@+id/lv_topic_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_content_title_header"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:text="相关内容"
        android:textSize="13sp"
        android:textColor="@color/coment_black_99"
        android:background="@color/coment_gray_bg"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"/>
</LinearLayout>