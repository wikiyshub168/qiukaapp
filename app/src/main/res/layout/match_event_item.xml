<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/ll_left"
        android:paddingRight="15dp"
        android:background="@drawable/event_bg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="right"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="5dp"
            android:id="@+id/tv_left_top"
             android:visibility="gone"
            android:textSize="12sp"
            android:textColor="@color/black_28"
            android:text="ffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:drawablePadding="5dp"
            android:visibility="gone"
            android:id="@+id/tv_left_bottom"
            android:textSize="12sp"
            android:textColor="@color/black_28"
            android:text="ffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <View android:layout_width="1dp"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/black_46"
            android:textSize="10sp"
            android:gravity="center"
            android:text="14"
            android:background="@drawable/shape_yellow_cricel"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <View android:layout_width="1dp"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:layout_height="0dp"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/ll_right"
        android:paddingLeft="15dp"
        android:background="@drawable/event_bg_left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="5dp"
            android:visibility="gone"
            android:id="@+id/tv_right_top"
            android:textSize="12sp"
            android:textColor="@color/black_28"
            android:text="ffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:drawablePadding="5dp"
            android:visibility="gone"
            android:id="@+id/tv_right_bottom"
            android:textSize="12sp"
            android:textColor="@color/black_28"
            android:text="ffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>