<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:clickable="true"
    android:background="@color/white_"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_matches_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        android:textColor="@color/white_"
        android:text="比赛事件"
        android:background="@color/black_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/whistle_icon"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/shape_yellow_cricel"
            android:layout_gravity="center_horizontal"
            android:layout_width="6dp"
            android:layout_height="6dp" />
    <LinearLayout
        android:id="@+id/ll_matches_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>




        <ImageView
            android:src="@drawable/shape_yellow_cricel"
            android:layout_gravity="center_horizontal"
            android:layout_width="6dp"
            android:layout_height="6dp" />
        <ImageView
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:src="@drawable/match_end"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/base_line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/in_ball"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="进球"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
            <FrameLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/wulong_ball"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="乌龙    "
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <FrameLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/dian_ball"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="点球"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
            <FrameLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/dian_ball_no"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="点球未进"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
            <FrameLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/yellow_card_one"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="黄牌"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:paddingBottom="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/red_card"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="红牌"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
            <FrameLayout
                android:paddingBottom="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/yellow_card_two"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="双黄牌"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
            <FrameLayout
                android:paddingBottom="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/up_player"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="换上"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
            <FrameLayout
                android:paddingBottom="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/down_player"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="换下        "
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
            <FrameLayout
                android:visibility="invisible"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/yellow_card_one"
                    android:textColor="@color/black_28"
                    android:textSize="11sp"
                    android:text="黄牌"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_data_anly_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:textColor="@color/white_"
            android:text="数据统计"
            android:background="@color/black_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_data_anly_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_player_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:textColor="@color/white_"
            android:text="球员阵容"
            android:background="@color/black_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@color/black_dd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_host_name"
                    android:textStyle="bold"
                    android:text="主队"
                    android:textColor="@color/black_28"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_away_name"
                    android:textStyle="bold"
                    android:text="客队"
                    android:textColor="@color/black_28"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_player_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_jishu_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:textColor="@color/white_"
            android:text="技术数据"
            android:background="@color/black_28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@color/black_dd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="近3场/近10场"
                android:textColor="@color/black_28"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"/>
            <TextView
                android:text="近3场/近10场"
                android:textColor="@color/black_28"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_jishu_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

    </LinearLayout>

</LinearLayout>