<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coment_gray_bg"
    tools:context="com.mayi.mayisports.activity.FansListActivity">

    <ListView
        android:scrollbars="none"
        android:id="@+id/lv_fans_list_ac"
        android:divider="@color/base_line_color"
        android:dividerHeight="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/ll_no_data"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:src="@drawable/no_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:text="你还没有粉丝"
            android:textSize="12sp"
            android:textColor="@color/coment_black_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <include layout="@layout/loadinglayout"/>
    <include layout="@layout/net_error_layout"/>
</FrameLayout>
