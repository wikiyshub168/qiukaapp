<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PublishGroomActivity">

    <LinearLayout
        android:background="@color/coment_gray_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/coment_black"
            android:padding="10dp"
            android:text="联赛名"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/coment_black"
            android:padding="10dp"
            android:text="比赛"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
<View
    android:background="@color/base_line_color"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:background="@color/coment_gray_bg"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:scrollbarStyle="insideOverlay"
            android:id="@+id/lv_match_name_groom"
            android:scrollbarSize="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/base_line_color"/>
        <FrameLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <ListView
                android:background="@color/coment_gray_bg"
                android:dividerHeight="0dp"
                android:divider="@null"
                android:id="@+id/lv_team_name_groom"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/ll_no_data"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="40dp"
                    android:src="@drawable/no_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="20dp"
                    android:text="暂无信息"
                    android:textSize="12sp"
                    android:textColor="@color/coment_black_99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
    
</LinearLayout>

    <include layout="@layout/loadinglayout"/>
    </FrameLayout>
    <TextView
        android:text="选择一场，下一步"
        android:textSize="12sp"
        android:padding="3dp"
        android:background="@color/black_50_alpha"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>