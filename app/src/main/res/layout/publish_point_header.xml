<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.PublishPointActivity">

    <EditText
        android:lineSpacingMultiplier="1.2"
        android:id="@+id/et_publish_point"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/empty_white"
        android:gravity="start"
        android:maxLength="140"
        android:hint="分享你的足球新鲜事"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textColor="@color/coment_black"
        android:textColorHint="@color/coment_black_99"
        android:textSize="17sp" />
    <com.mayisports.qca.view.NestingGridViewInScrollView
        android:layout_marginTop="10dp"
        android:id="@+id/gv_publish_point"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:layout_marginRight="6dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_link_topic_publish"
        android:background="@drawable/gray_shape"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/right_gray_triangle"
        android:text="关联话题"
        android:textSize="14sp"
        android:textColor="@color/coment_black_99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignRight="@+id/tv_link_topic_publish"
            android:translationX="6dp"
            android:visibility="gone"
            android:id="@+id/iv_delete_topic"
            android:src="@drawable/delete_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    
    

        <CheckBox
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:paddingLeft="9dp"
            android:button="@drawable/comment_checkbox_btn"
            android:checked="false"
            android:id="@+id/cb_share_center"
            android:textColor="@color/coment_black"
            android:textSize="14sp"
            android:text="同步到我的动态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




</LinearLayout>