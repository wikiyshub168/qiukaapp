<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black_50_alpha"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/top"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_shape_stroke_10">


         <com.mayisports.qca.view.CustomRoundAngleImageView

             android:layout_width="match_parent"
             android:layout_height="135dp"
             android:layout_marginBottom="10dp"
             android:scaleType="centerCrop"
             app:left_top_radius="10dp"
             app:right_top_radius="10dp"
             android:src="@drawable/bind_phone_top" />

        <TextView
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/tv_content_toast_msg"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            android:text="请绑定手机号"
            android:layout_gravity="center"
            android:textColor="@color/coment_black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"

            android:text="@string/bind_phone_text"
            android:layout_gravity="center"
            android:textColor="@color/black_66"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_ad"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        <TextView
            android:id="@+id/tv_to_bind_phone"
            android:layout_marginTop="36dp"
            android:background="@drawable/select_score_bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:gravity="center"

            android:text="去绑定"
            android:layout_gravity="center"
            android:textColor="@color/coment_black"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_dismiss"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="以后再说"
            android:layout_gravity="center"
            android:textColor="@color/black_B3B4B9"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






    </LinearLayout>







    <TextView
        android:visibility="gone"
        android:background="@drawable/home_page_close"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_ok_toast_msg"
        android:gravity="center"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/coment_black"
        android:layout_width="52dp"
        android:layout_height="52dp" />
</LinearLayout>