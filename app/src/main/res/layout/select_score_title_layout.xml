<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#272B2E"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_left_title_select_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_left"
        android:padding="10dp"
        />


    <FrameLayout
        android:id="@+id/fl_"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_select_score"
            android:visibility="gone"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="联赛筛选"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:visibility="gone"
            android:id="@+id/rg_select_score"
            android:orientation="horizontal"
            android:background="@drawable/select_top_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_left"
                android:button="@null"
                android:background="@drawable/select_score_top_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:textColor="@drawable/select_score_text_selector"
                android:text="赛事"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb_right"
                android:background="@drawable/select_score_top_right_bg"
                android:button="@null"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:textColor="@drawable/select_score_text_selector"
                android:text="盘口"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </FrameLayout>

    <FrameLayout
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:clickable="true"
            android:id="@+id/tv_ritht_title_select_score"

            android:layout_gravity="center"
            android:text="完成"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>